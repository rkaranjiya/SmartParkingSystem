<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000000"
        android:orientation="vertical">
        <Button
            android:id="@+id/b2"
            android:layout_marginTop="20sp"
            android:layout_marginRight="23sp"
            android:layout_marginLeft="22sp"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:background="#000000"
            >
        </Button>

        <Button
            android:id="@+id/b1"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="5sp"
            android:layout_width="20dp"
            android:layout_height="390sp"
            android:background="#000000"
            android:textSize="25sp"></Button>

        <Button
            android:id="@+id/p1"
            android:layout_width="70sp"
            android:layout_height="100sp"
            android:layout_below="@+id/b2"
            android:layout_toRightOf="@+id/b1"
            android:text="1"
            android:textColor="#ffff00"
            android:textSize="25sp">
        </Button>

        <Button
            android:id="@+id/b4"
            android:layout_width="15sp"
            android:layout_height="100sp"
            android:layout_toRightOf="@+id/p1"
            android:layout_below="@id/b2">
        </Button>

        <Button
            android:id="@+id/p2"
            android:layout_width="70sp"
            android:layout_height="100sp"
            android:layout_below="@+id/b2"
            android:layout_toRightOf="@+id/b4"
            android:text="2"
            android:textColor="#ffff00"
            android:textSize="25sp">
        </Button>

        <Button
            android:id="@+id/b6"
            android:layout_width="15sp"
            android:layout_height="100sp"
            android:layout_toRightOf="@+id/p2"
            android:layout_below="@id/b2">
        </Button>

        <Button
            android:id="@+id/p3"
            android:layout_width="70sp"
            android:layout_height="100sp"
            android:layout_below="@+id/b2"
            android:layout_toRightOf="@+id/b6"
            android:text="3"
            android:textColor="#ffff00"
            android:textSize="25sp">
        </Button>

        <Button
            android:id="@+id/b8"
            android:layout_width="15sp"
            android:layout_height="100sp"
            android:layout_toRightOf="@+id/p3"
            android:layout_below="@id/b2">
        </Button>

        <Button
            android:id="@+id/p4"
            android:layout_width="70sp"
            android:layout_height="100sp"
            android:layout_below="@+id/b2"
            android:layout_toRightOf="@+id/b8"
            android:text="4"
            android:textColor="#ffff00"
            android:textSize="25sp">
        </Button>

        <Button
            android:id="@+id/b10"
            android:layout_marginTop="20sp"
            android:layout_width="20sp"
            android:layout_height="500sp"
            android:layout_toRightOf="@+id/p4"
            android:background="#000000"
            android:textSize="25sp"></Button>

        <Button
            android:id="@+id/p5"
            android:layout_width="70sp"
            android:layout_height="100sp"
            android:layout_below="@+id/p1"
            android:layout_marginTop="150sp"
            android:layout_toRightOf="@+id/b1"
            android:text="5"
            android:textColor="#ffff00"
            android:textSize="25sp">
        </Button>

        <Button
            android:id="@+id/b12"
            android:layout_width="15sp"
            android:layout_height="100sp"
            android:layout_marginTop="150sp"
            android:layout_toRightOf="@+id/p5"
            android:layout_below="@id/b4">
        </Button>

        <Button
            android:id="@+id/p6"
            android:layout_width="70sp"
            android:layout_height="100sp"
            android:layout_below="@+id/p2"
            android:layout_marginTop="150sp"
            android:layout_toRightOf="@+id/b12"
            android:text="6"
            android:textColor="#ffff00"
            android:textSize="25sp">
        </Button>

        <Button
            android:id="@+id/b14"
            android:layout_width="15sp"
            android:layout_height="100sp"
            android:layout_below="@id/b6"
            android:layout_marginTop="150sp"
            android:layout_toRightOf="@+id/p6"
            android:background="#000000"></Button>

        <Button
            android:id="@+id/b15"
            android:layout_marginLeft="22sp"
            android:layout_width="190sp"
            android:layout_height="20sp"
            android:layout_below="@+id/b14"
            android:background="#000000"
            >
        </Button>

        <TextView
            android:id="@+id/d1"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_below="@id/b15"
            android:layout_marginTop="20sp"
            android:textAlignment="center"
            android:layout_marginLeft="10sp"
            android:textColor="@color/cardview_light_background"
            android:textAllCaps="false">
        </TextView>

        <TextView
            android:id="@+id/d2"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_below="@id/b15"
            android:layout_marginTop="20sp"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/d1"
            android:layout_marginLeft="20sp"
            android:textColor="@color/cardview_light_background"
            android:textAllCaps="false">
        </TextView>

        <TextView
            android:id="@+id/d3"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_below="@id/b15"
            android:layout_marginTop="20sp"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/d2"
            android:layout_marginLeft="20sp"
            android:textColor="@color/cardview_light_background"
            android:textAllCaps="false">
        </TextView>

        <TextView
            android:id="@+id/d4"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_below="@id/b15"
            android:layout_marginTop="20sp"
            android:textAlignment="center"
            android:textColor="@color/cardview_light_background"
            android:layout_toRightOf="@+id/d3"
            android:layout_marginLeft="20sp"
            android:textAllCaps="false">
        </TextView>

        <TextView
            android:id="@+id/d5"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_below="@id/b15"
            android:layout_marginTop="20sp"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/d4"
            android:textColor="@color/cardview_light_background"
            android:layout_marginLeft="20sp"
            android:textAllCaps="false">
        </TextView>

        <TextView
            android:id="@+id/d6"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_below="@id/b15"
            android:layout_marginTop="20sp"
            android:textAlignment="center"
            android:textColor="@color/cardview_light_background"
            android:layout_toRightOf="@+id/d5"
            android:layout_marginLeft="20sp"
            android:textAllCaps="false">
        </TextView>

        <Button
            android:id="@+id/logout"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_below="@+id/d6"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn"
            android:text="Next"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="22dp">
        </Button>

    </RelativeLayout>
</ScrollView>